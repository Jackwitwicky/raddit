<div class="page-header">
  <h1 class="text-center">Welcome to Raddit.</h1>
</div>

<div class="container">
  <div class="row">
    <h2 class="col-md-push-1 col-md-4">While you were away...</h2>
  </div>
</div>

<% @link.each do |link| %>
    <p>
    <div class="title">
      <%= link_to link.title, link %>
    </div>
    </p>

    <p>
      Submitted <%= time_ago_in_words(link.created_at) %> by <%= link.user.name %>
    </p>

    <hr class="featurette-divider">

<% end %>