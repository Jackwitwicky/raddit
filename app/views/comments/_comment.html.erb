<p class="comment">
    <div class="comment-body">
      <%= comment.body %>
    </div>

    <% if comment.user == current_user %>
        <div class="pull-right">
            <%= link_to "Delete", [comment.link, comment], data: {confirm: "Are you sure?"},
                        method: :delete, class: "btn btn-warning" %>
        </div>
    <% end %>
</p>

<p>
  Submitted <%= time_ago_in_words(comment.created_at) %> by <%= comment.user.name %>
</p>